            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="120.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <VBox style="-fx-background-color: white; -fx-border-color: #eeeeee; -fx-border-width: 1; -fx-background-radius: 3; -fx-border-radius: 3;" GridPane.columnIndex="0">
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>
                    <children>
                        <Label text="Total Produits" style="-fx-text-fill: #777777;">
                            <font>
                                <Font size="13.0" />
                            </font>
                        </Label>
                        <Label fx:id="totalProduitsLabel" text="0" style="-fx-text-fill: #2c3e50;">
                            <font>
                                <Font name="System Bold" size="28.0" />
                            </font>
                            <VBox.margin>
                                <Insets top="5.0" />
                            </VBox.margin>
                        </Label>
                        <Label text="produits en stock" style="-fx-text-fill: #999999;">
                            <font>
                                <Font size="11.0" />
                            </font>
                            <VBox.margin>
                                <Insets top="5.0" />
                            </VBox.margin>
                        </Label>
                    </children>
                </VBox>

                <VBox style="-fx-background-color: white; -fx-border-color: #eeeeee; -fx-border-width: 1; -fx-background-radius: 3; -fx-border-radius: 3;" GridPane.columnIndex="1">
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>
                    <children>
                        <Label text="Commandes en cours" style="-fx-text-fill: #777777;">
                            <font>
                                <Font size="13.0" />
                            </font>
                        </Label>
                        <Label fx:id="commandesEnCoursLabel" text="0" style="-fx-text-fill: #2980b9;">
                            <font>
                                <Font name="System Bold" size="28.0" />
                            </font>
                            <VBox.margin>
                                <Insets top="5.0" />
                            </VBox.margin>
                        </Label>
                        <Label text="commandes à traiter" style="-fx-text-fill: #999999;">
                            <font>
